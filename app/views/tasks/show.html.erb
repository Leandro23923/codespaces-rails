<h1><%= @task.title %></h1>

<p><strong>Completado:</strong> <%= @task.completed ? 'Sí' : 'No' %></p>

<%= link_to 'Editar', edit_task_path(@task) %> |
<%= link_to 'Eliminar', task_path(@task), method: :delete, data: { confirm: '¿Estás seguro de eliminar esta tarea?' } %> |
<%= link_to 'Volver a la lista de tareas', tasks_path %>